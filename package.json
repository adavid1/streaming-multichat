{
  "name": "streaming-multichat",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "dev:test": "cd server && npm run dev:test",
    "build": "npm run build:shared && npm run build:client && npm run build:server",
    "build:shared": "cd server && npm run build:shared",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "preview": "cd client && npm run preview",
    "server": "cd server && npm start",
    "install:all": "npm install && cd shared && npm install && cd ../server && npm install && cd ../client && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}